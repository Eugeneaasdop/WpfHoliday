<Page x:Class="Wpf_Holiday.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_Holiday.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Content="Авторизация"  FontSize="24" />
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите логин:" />
            <TextBox Name="login" Width="180" Height="25" />
            <Label Content="Введите пароль:" />
            <PasswordBox Name="password" Width="180" Height="25"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Name="btnenter" Content="Войти" Width="55" Height="25" Margin="0,0,5,0" Click="btnenter_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
